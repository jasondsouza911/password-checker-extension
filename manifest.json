{
  "manifest_version": 3,
  "name": "CyberGuard Password Checker",
  "description": "Dark cyber-themed password strength checker with suggestions.",
  "version": "1.3.0",

  "action": {
    "default_popup": "popup.html",
    "default_title": "CyberGuard Password Checker"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": [
    "contextMenus",
    "storage",
    "scripting",
    "tabs"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "host_permissions": [
    "<all_urls>"
  ],

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content_script.js"
      ],
      "run_at": "document_idle",
      "all_frames": true,
      "match_about_blank": true
    }
  ],

  "commands": {
    "open-cyberguard": {
      "suggested_key": {
        "default": "Alt+P"
      },
      "description": "Open CyberGuard Password Checker for focused field"
    }
  }
}
